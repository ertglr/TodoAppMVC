@model TodoApp.ENTITIES.EntityClass.Task
@{
    ViewBag.Title = "NewTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row my-5">
    <div class=" col-sm-4 offset-4 login-box p-5">
        @using (Ajax.BeginForm("NewTask",new { Owner=Model.Owner},new AjaxOptions() { HttpMethod="Post", LoadingElementId="loading", LoadingElementDuration=300, InsertionMode=InsertionMode.InsertAfter, UpdateTargetId="list"}))
        {

            <div class="form-group row">
                @Html.LabelFor(i => i.Text, new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(i => i.Text, new { @class = "form-control", @placeholder = "Görevi giriniz..." })
                    @Html.ValidationMessageFor(i => i.Text, "", new { @class = "text-danger" })
                </div>
            </div>
          

            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="submit" value="Ekle" class="btn btn-success btn-block" />
                </div>
            </div>
        }
    </div>
</div>

