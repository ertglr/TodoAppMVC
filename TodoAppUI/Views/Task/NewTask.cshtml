@model TodoApp.ENTITIES.EntityClass.Task
@{
    ViewBag.Title = "NewTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row my-5">
    <div class=" col-sm-4 offset-4 login-box p-5">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(i=>i.Owner.ID)
            <div class="form-group row">
                @Html.LabelFor(i => i.Text, new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.TextAreaFor(i => i.Text, new { @class = "form-control", @placeholder = "Görevi giriniz..." })
                    @Html.ValidationMessageFor(i => i.Text, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(i => i.ModifiedUser, new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(i => i.ModifiedUser, null, new { @class = "form-control", @placeholder = "Kullanıcı adınızı giriniz..." })
                    @Html.ValidationMessageFor(i => i.ModifiedUser, "", new { @class = "text-danger" })
                </div>


            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="submit" value="Ekle" class="btn btn-success btn-block" />
                </div>
            </div>
        }
    </div>
</div>

