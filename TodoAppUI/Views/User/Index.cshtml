@model List<TodoApp.ENTITIES.EntityClass.Task>
@{
    ViewBag.Title = "Index";
}

<div class="col-md-12"><h2>Görevler</h2></div>
<div class="row">
    @Html.ActionLink("Yeni Görev Ekle", "NewTask", "Task",null, new { @class = "btn btn-primary" })
</div>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Tamamlandı Mı?</th>
            <th>Görev</th>
            <th>Oluşturulma Tarihi</th>
            <th>Bitirme Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            foreach (var item in Model)
            {
                <tr>
                  
                    <td><input type="checkbox" name="IsCompleted" checked="@item.IsComleted" /> </td>
                    <td>@item.Text</td>
                    <td>@item.CreatedOn.Value.ToShortDateString()</td>
                    @if (item.DueDate == null)
                    {
                        <td>Görev henüz tamamlanmadı.</td>
                    }
                    else
                    {
                        <td>@item.DueDate.Value.ToShortDateString()</td>

                    }
                    <td>
                        @Html.ActionLink("Düzenle", "Edit","Task", new { id = item.ID }, new { @class = "btn btn-success btn-xs" }) |

                        @Html.ActionLink("Delete", "Delete","Task", new { id = item.ID }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>

            }

        }

        else
        {
            <tr>
                <td>Şuanda herhangi bir göreviniz yok.</td>
            </tr>
        }


    </tbody>
</table>

