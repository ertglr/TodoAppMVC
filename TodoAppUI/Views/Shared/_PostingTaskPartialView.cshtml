@model TodoApp.ENTITIES.EntityClass.Task

<div class="row my-5">
    <div class=" col-sm-4 offset-4 login-box p-5">
        @using (Ajax.BeginForm("NewTask", "Task", null, new AjaxOptions() { HttpMethod = "Post", LoadingElementId = "loading", UpdateTargetId = "list", LoadingElementDuration = 300, InsertionMode = InsertionMode.Replace }))
        {

            <div class="form-group">
                <a href="/User/Index" class="close">x</a>
            </div>

            <div class="form-group row">
                @Html.LabelFor(i => i.Text, new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(i => i.Text, new { @class = "form-control", @placeholder = "Görevi giriniz..." })
                    @Html.ValidationMessageFor(i => i.Text, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="submit" value="Ekle" class="btn btn-success btn-block" />
                </div>
            </div>
        }
    </div>
</div>
